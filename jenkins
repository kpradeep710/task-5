pipeline{
    agent any
  environment {
        PATH = "$PATH:/C:/Program Files/apache-maven-3.9.3-bin/apache-maven-3.9.3/bin"
    }
 stages {
        stage('clone repo') {
            steps {
                echo "Clone the Git repository"
                git branch: 'main',
                url: 'https://github.com/kpradeep710/task-5.git'
            }
        }

        stage('Build') {
            steps {
                echo "build the maven project"
                sh 'mvn clean package'
            }
        }

        stage('SonarQube analysis') {
                   //    def scannerHome = tool 'sonar-scanner-'4.0';
                steps{
                    withSonarQubeEnv('sonar-server-10.6') { 
                             // If you have configured more than one global server connection, you can specify its name
                             //      sh "${scannerHome}/bin/sonar-scanner"
                             sh "mvn sonar:sonar"
                    }
                }
            }                
    }

}
