pipeline{
    agent any
  environment {
        PATH = "$PATH:/C:/Program Files/apache-maven-3.9.3-bin/apache-maven-3.9.3/bin"
    }
 stages {
        stage('clone repo') {
            steps {
                echo "Clone the Git repository"
                git branch: 'main',
                url: 'https://github.com/kpradeep710/task-5.git'
            }
        }

        stage('Build') {
            steps {
                echo "build the maven project"
                bat 'mvn clean package'
            }
        }

        stage('SonarQube analysis') {
                   //    def scannerHome = tool 'SonarScanner 6,2';
                steps{
                    withSonarQubeEnv('Sonar-Server-10.6') { 
                             // If you have configured more than one global server connection, you can specify its name
                             //      bat "${scannerHome}/bin/sonar-scanner"
                             bat "mvn sonar:sonar"
                    }
                }
            }                


        stage('Deploy') {
            steps {
                echo "connected to ec2-instance and ready to deploy"
                bat '''
                scp -i C:/Documents/k.pradeepkumar.pem target/01-maven-web-app.war ec2-user@13.201.56.140:/home/ec2-user
                '''
            }
        }
    }
}
